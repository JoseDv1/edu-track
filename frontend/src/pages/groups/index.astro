---
import Layout from "../../layouts/Layout.astro";
import GroupManagement from "../../components/GroupManagement.svelte";
---

<Layout title="Gestión de Grupos">
	<div class="container">
		<header class="page-header">
			<h1>Administración de Grupos</h1>
			<p>
				Aquí puedes gestionar los grupos del sistema, cambiar sus nombres o
				eliminarlos.
			</p>

			<div class="actions">
				<a href="/groups/new" class="btn btn-primary">Crear nuevo grupo</a>
			</div>
		</header>

		<GroupManagement client:load />
	</div>
</Layout>

<style>
	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1rem;
	}

	.page-header {
		margin-bottom: 2rem;
	}

	h1 {
		color: var(--color-primary);
		margin-bottom: 0.5rem;
	}

	p {
		color: var(--color-text-secondary);
		margin-bottom: 1.5rem;
	}

	.actions {
		display: flex;
		gap: 1rem;
		margin-top: 1rem;
	}

	.btn {
		display: inline-block;
		padding: 0.75rem 1.5rem;
		border-radius: 4px;
		text-decoration: none;
		font-weight: 500;
		cursor: pointer;
		transition: background-color 0.2s ease;
	}

	.btn-primary {
		background-color: var(--color-primary);
		color: white;
	}

	.btn-primary:hover {
		background-color: var(--color-primary-hover);
	}

	.btn-secondary {
		background-color: var(--color-bg);
		color: var(--color-text);
		border: 1px solid var(--color-border);
	}

	.btn-secondary:hover {
		background-color: #e5e5e5;
	}
</style>
