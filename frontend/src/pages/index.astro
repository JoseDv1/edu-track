---
import Layout from "@/layouts/Layout.astro";
import GroupTree from "@/components/GroupTree.svelte";
import { API_URL, type Grupo } from "@/lib/api";

const URL = `${API_URL}/api/groups`;
const res = await fetch(URL);
if (!res.ok) {
	throw new Error("Failed to fetch groups");
}
const groups: Grupo[] = await res.json();
---

<Layout title="EduTrack - Your course tracking for Teachers">
	<GroupTree grupos={groups} client:only="svelte" />
</Layout>
